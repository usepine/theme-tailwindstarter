{{#if isSecondary}}
<ul class="list-reset items-center text-sm pt-3">
    {{#foreach navigation}}
    <li>
        <a class="inline-block text-gray-600 no-underline hover:text-gray-900 hover:text-underline py-1"
            href="{{url absolute="true"}}">{{label}}</a>
    </li>
    {{/foreach}}
</ul>
{{else}}
<ul class="list-reset lg:flex justify-end flex-1 items-center">
  {{#foreach navigation}}
    {{#if current}}
      <li class="mr-3"><a class="inline-block py-2 px-4 text-gray-900 font-bold no-underline" href="{{url absolute="true"}}">{{label}}</a></li>
    {{else}}
      <li class="mr-3"><a class="inline-block text-gray-600 no-underline hover:text-gray-900 hover:text-underline py-2 px-4" href="{{url absolute="true"}}">{{label}}</a></li>
    {{/if}}
  {{/foreach}}
</ul>
{{/if}}