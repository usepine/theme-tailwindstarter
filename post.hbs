{{!< default}}

{{#post}}
<div class="w-full px-4 md:px-6 text-xl text-gray-800 leading-normal">

    <!--Title-->
    <div>
        <p class="text-base md:text-sm text-green-500 font-bold">&lt; <a href="{{@site.url}}"
                class="text-base md:text-sm text-green-500 font-bold no-underline hover:underline">
                BACK TO BLOG</a></p>
        <h1 class="font-bold break-normal text-gray-900 pt-6 pb-2 text-3xl md:text-4xl">
            {{title}}
        </h1>
        <p class="text-sm md:text-base font-normal text-gray-600">
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="YYYY-MM-DD"}}</time>
        </p>
    </div>


    <!--Post Content-->

    <section id="post-content" class="my-12">
        {{content}}
    </section>

    <!--/ Post Content-->

</div>

<!--Tags -->
<div class="text-base md:text-sm text-gray-500 px-4 py-6">
    Tags:
    {{#foreach tags}}
        <a href="{{url}}" class="text-base md:text-sm text-green-500 no-underline hover:underline">{{name}}</a>
    {{/foreach}}

</div>

<!--Divider-->
<hr class="border-b-2 border-gray-400 mb-8 mx-4">

<!--Next & Prev Links-->
<div class="flex justify-between content-center px-4 pb-12">
    <div class="text-left">
        <span class="text-xs md:text-sm font-normal text-gray-600">&lt; Previous Post</span><br>
        {{#prev_post}}
        <p><a href="{{url}}"
                class="break-normal text-base md:text-sm text-green-500 font-bold no-underline hover:underline">{{title}}</a></p>
        {{/prev_post}}
    </div>
    <div class="text-right">
        <span class="text-xs md:text-sm font-normal text-gray-600">Next Post &gt;</span><br>
        {{#next_post}}
        <p><a href="{{url}}"
                class="break-normal text-base md:text-sm text-green-500 font-bold no-underline hover:underline">{{title}}</a></p>
        {{/next_post}}
    </div>
</div>





{{/post}}