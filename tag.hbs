{{!< default}}

{{#tag}}
<section class="my-24 text-center">
<h1 class="text-4xl">
    {{name}}
</h1>
<p class="text-2xl">
    {{#if description}}
        {{description}}
    {{else}}
        A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
    {{/if}}
</p>
</section>
{{/tag}}

<section class="space-y-8 mb-8">
{{#foreach posts visibility="all"}}

    {{> "card"}} {{!-- partials/card.hbs --}}

{{/foreach}}
</section>

