{{!--
Re-usable card for linking to posts
--}}

<!-- Component from https://tailwindcomponents.com/component/horizontal-card -->
<div class="w-full lg:flex">
  <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('{{img_url feature_image size="m"}}'); background-size:cover; background-position:50% 50%;">
  </div>
  <div class="border-r border-b border-l border-grey-light lg:border-l-0 lg:border-t lg:border-grey-light bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-8 space-y-2">
    {{#has visibility="members"}}
      <p class="text-sm text-grey-dark flex items-center">
        <svg class="text-grey w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <path d="M4 8V6a6 6 0 1 1 12 0v2h1a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-8c0-1.1.9-2 2-2h1zm5 6.73V17h2v-2.27a2 2 0 1 0-2 0zM7 6v2h6V6a3 3 0 0 0-6 0z" />
        </svg>
        Members only
      </p>
      {{/has}}
      <div class="text-black font-bold text-xl mb-2">
          <a href="{{url}}">{{title}}</a>
        </div>
      <p class="text-grey-darker text-base">{{excerpt}}</p>
      <p class="text-grey-darker text-base">
          <a href="{{url}}" class="underline -bold">Read more</a>
      </p>
    </div>
    <div class="flex items-center">
      {{#foreach authors}}
      <img class="w-10 h-10 rounded-full mr-4" src="{{profile_image}}" alt="Profile image of {{name}}">
      <div class="text-sm">
        <a href="{{url}}" class="block text-black leading-none">{{name}}</a>
      </div>
      {{/foreach}}
    </div>
  </div>
</div>

